{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.4/.schema/devbox.schema.json",
  "packages": ["go@latest", "opencv@latest", "gdb@latest"],
  "env": {
    "PKG_CONFIG_PATH": "$DEVBOX_PACKAGES_DIR/lib/pkgconfig",
    "GOPATH": "$DEVBOX_PROJECT_ROOT",
    "PATH": "$PATH:$DEVBOX_PROJECT_ROOT/bin"
  },
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null",
      "go install github.com/go-delve/delve/cmd/dlv@latest"
    ],
    "scripts": {
      "test": ["echo \"Error: no test specified\" && exit 1"]
    }
  }
}
